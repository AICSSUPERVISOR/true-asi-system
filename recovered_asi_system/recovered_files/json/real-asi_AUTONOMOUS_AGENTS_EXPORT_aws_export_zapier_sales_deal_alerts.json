{
  "name": "Sales Deal Stage Alerts",
  "description": "Alert on deal stage changes",
  "trigger": {
    "app": "Supabase",
    "event": "Record Updated",
    "table": "deals",
    "field": "stage"
  },
  "actions": [
    {
      "app": "Slack",
      "action": "Send Message",
      "channel": "#sales-pipeline"
    },
    {
      "app": "Gmail",
      "action": "Send Email",
      "to": "{{deal_owner}}",
      "template": "deal_stage_change"
    }
  ],
  "industry": "sales"
}