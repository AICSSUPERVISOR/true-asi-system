{
  "name": "Universal Data Synchronization",
  "description": "Sync data across all systems",
  "trigger": {
    "app": "Schedule",
    "event": "Every Hour"
  },
  "actions": [
    {
      "app": "Webhook",
      "action": "POST",
      "url": "{{ASI_API}}/sync-data",
      "body": [
        "sync_type=full"
      ]
    },
    {
      "app": "Supabase",
      "action": "Update Record",
      "table": "sync_log",
      "fields": [
        "last_sync",
        "status"
      ]
    }
  ],
  "industry": "universal"
}